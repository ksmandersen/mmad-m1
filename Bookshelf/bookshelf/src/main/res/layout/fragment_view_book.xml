<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.itu.mmad.bookshelf.ViewBookActivity.ViewBookFragment">

    <TextView
        android:text="@string/hello_world"
        android:id="@+id/view_book_title"
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/hello_world"
        android:id="@+id/view_book_author"
        android:textSize="16dp"
        android:layout_below="@id/view_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/hello_world"
        android:id="@+id/view_book_pages"
        android:textSize="16dp"
        android:layout_below="@id/view_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/hello_world"
        android:id="@+id/view_book_isbn"
        android:textSize="16dp"
        android:layout_below="@id/view_book_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/view_book_delete_button"
        android:text="@string/delete_book"
        android:layout_marginTop="8dp"
        android:layout_below="@id/view_book_isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
